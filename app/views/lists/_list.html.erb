<div id="<%= dom_id list %>">
  <% if action_name != 'show' %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Title:</strong>
      <%= list.title %>
    </p>
  <% end %>

  <% if action_name == 'show' %>
    <ol class="relative border-l border-gray-200 dark:border-gray-700">
      <% list.categories.each do |category| %>
        <li class="mb-10 ml-6">
          <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -left-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900">
              <%= category.emojie %>
          </span>
          <h3 class="flex items-center mb-1 text-lg font-semibold text-gray-900 dark:text-white"><%= category.name %><span class="bg-blue-100 text-blue-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ml-3"><%= category.items.count %> items</span></h3>
          <% category.items.each do |item| %>
            <%= render item %>
          <% end %>
        </li>
      <% end %>
    </ol>

    <% if @list.categories.count.positive? %>
      <%= link_to "Add new item", new_list_item_path(list), class: "rounded-lg py-3 px-5 text-white bg-blue-600 inline-block font-medium" %>
    <% end %>
  <% end %>

  <% if action_name != "show" %>
    <%= link_to "Show this list", list, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this list', edit_list_path(list), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
